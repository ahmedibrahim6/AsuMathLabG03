{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build matrix",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                // "-Wall",
                // "-Wextra",
                "-Wno-return-type",
                "-std=gnu++17",
                "${file}",
                "${fileDirname}/CMatrix.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: /usr/bin/g++"
        }
    ]
}